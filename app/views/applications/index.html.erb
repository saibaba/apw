<%= link_to 'Add Application', new_application_path, :class => "rs-btn rs-primary" %>

<% if @customer
%>

    <%= link_to 'Export to CSV', customer_applications_path(@customer, :format => "csv" ), :class => "rs-btn rs-primary" %>
    <span>&nbsp;&nbsp;&nbsp;</span>
    <%= link_to 'Score', score_customer_path(@customer), :class => "rs-link" %>
    <br />
    <br />
    <h1>Listing applications for customer <%= @customer.name %></h1>
<%else%>
    <br />
    <br />
    <h1>Listing applications for all customers</h1>
<% end %>

<table id="applications" class="display">
  <thead>
    <tr>
      <th>Actions</th>
      <th>Customer ID</th>
      <th>Name</th>
      <th>Servers</th>
      <th>Tiers</th>
      <th>Style</th>
      <th>Provider</th>
      <th>Customization</th>
      <th>Consumer</th>
      <th>Consumption</th>
      <th>Transport</th>
      <th>Integration</th>
      <th>Inhouse</th>
      <th>Contracted</th>
      <th>Criticality</th>
      <th>Sensitivity</th>
      <th>Regulatory</th>
      <th>Constraint</th>
      <th>Bucket</th>
      <th>Phase</th>
      <th>Solution</th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td>
          <div class="rs-btn-groupx">
            <%= link_to '', edit_application_path(application), :class => "rs-edit" %>
            <span style="width:10px"> </span>
            <%= link_to '', application, method: :delete, :class => "rs-delete", data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
        <td><%= application.customer_id %></td>
        <td><%= link_to application.name, application, :class => "rs-link" %></td>
        <td><%= application.servers %></td>
        <td><%= application.tiers %></td>
        <td><%= application.style %></td>
        <td><%= application.provider %></td>
        <td><%= application.customization %></td>
        <td><%= application.consumer %></td>
        <td><%= application.consumption %></td>
        <td><%= application.transport %></td>
        <td><%= application.integration %></td>
        <td><%= application.inhouse %></td>
        <td><%= application.contracted %></td>
        <td><%= application.criticality %></td>
        <td><%= application.sensitivity %></td>
        <td><%= application.regulatory %></td>
        <td><%= application.constraint %></td>
        <td><%= application.bucket %></td>
        <td><%= application.phase %></td>
        <td><%= application.solution %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= javascript_include_tag "jquery.dataTables.min"%>

<script type="text/javascript">
    var oTable = $('#applications').dataTable( { 
        "sScrollX": "800px",
        "sScrollY": "600px",
        "bScrollCollapse" : true
    });
</script>
